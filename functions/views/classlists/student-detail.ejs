<%- include ("../partials/head.ejs") %>

<main>
    <h1 class="header"><%= firstname + ' ' + lastname %></h1>
    <div class="student-image">
    </div>
    <div class="content-detail-student">
        <h1><%= firstname %></h1>
        <div><h3>Moeilijke lijsten</h3>
        </div>
        <div><h3>Moeilijke woorden</h3>
            <% moeite.forEach((woord) => { %>
                <li><%= woord.word %></li>
            <% }); %>
        </div>
        <div><h3>Toegewezen lijst</h3>
            <li><%= lijst %></li>
        </div>
        <div class="voortgang">
            <h3>voortgang - week</h3>
            <div id="progress-bar">
                <div></div>
                <p>20/100 woorden</p>
            </div>
        </div>
        <div class="totaal">
            <h3>totaal</h3>
        </div>
    </div>
</main>

<%- include ("../partials/footer.ejs") %>