<%- include ("../partials/head.ejs") %>

<main>
    <h1 class="header"><%= firstname + ' ' + lastname %></h1>
    <div class="content-detail-student">
        <div class="student-detail-header">
            <h1><%= firstname %></h1>
        </div>
        <hr>
        <div class="student-detail-assigned">
            <div><h3>Toegewezen lijst</h3>
                <% if(!lijst) { %>
                    <p>geen lijst toegewezen</p>
                <% } else { %>
                    <li><%= lijst %></li>
                <% } %>
            </div>
            <div><h3>Moeilijke lijsten</h3>
            </div>
            <div><h3>Moeilijke woorden</h3>
                <% moeite.forEach((woord) => { %>
                    <li><%= woord.word %></li>
                <% }); %>
            </div>
        </div>

        <hr>
        <div class="student-detail-progression">
            <div class="voortgang">
                <h3>Voortgang - week</h3>
                <div id="progress-bar">
                    <div id="progress-percentage"></div>
                    <% if(aantalGeoefend > 0) { %>
                        <p><%= aantalGeoefend %>/100 woorden</p>
                    <% } else { %>
                        <p>0/100 woorden</p>
                    <% } %>
                </div>
            </div>
            <div class="totaal">
                <h3>Totaal</h3>
                <div id="progress-bar">
                    <div id="total-percentage"></div>
                    <p>0/3000</p>
                </div>
            </div>
        </div>

        <% if(spell) { %>
            <div>
                <h3>Geheime spreuk</h3>
                <p><%= spell %></p>
            </div>
        <% } %>
    </div>
</main>
<script>
    const progressPercentage = document.getElementById('progress-percentage');
    progressPercentage.style.width = <%= aantalGeoefend %> *
    0.9 + '%';
</script>

<%- include ("../partials/footer.ejs") %>