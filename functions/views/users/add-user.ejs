<%- include ("../partials/head.ejs") %>

<main>
    <h1 class="header">Gebruikers</h1>
    <div class="content">
        <h2>Gebruiker toevoegen</h2>
        <div id="register-form" class="auth-form">
            <input id="username-input" class="form-input" type="email" placeholder="vul e-mail in" name="user" required>
            <input id="password-input" class="form-input" type="password" placeholder="vul wachtwoord in"
                   name="pass"
                   autocomplete="on"
                   required>
            <input id="password-repeat-input" class="form-input" type="password"
                   placeholder="herhaal wachtwoord"
                   name="pass-repeat"
                   autocomplete="on"
                   required>
            <button id="register-send-button" class="form-button success-button">registeren</button>
        </div>
    </div>
</main>

<%- include ("../partials/footer.ejs") %>